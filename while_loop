//Example of while loop
//By niqabytedev

#include <iostream>
using namespace std;
int main() 
{
  short int number = 1, i = 1;
	while (number != 0) {
		i = 1;
		cout << "enter a number between 1 and 10" << endl;
		cin >> number;
		if (number < 0 || number>10) {
			cout << "number has to be between 1 and 10" << endl;

		}
		else {
			while (i <= 10 && number != 0) {
				cout << number << "x" << i << "=" << number * i << endl;
				i++;
			}
		}
	}
	return 0;
}
